#include "my_led.h"
#include "my_switch.h"


#if !defined(__SOFT_FP__) && defined(__ARM_FP)
  #warning "FPU is not initialized, but the project is compiling for an FPU. Please initialize the FPU before use."
#endif

int main(void)
{
    led_init();
    switch_init();

    int led_state = 0;   // 0 = OFF, 1 = ON

    while (1)
    {
        if (button() == 1)          // button pressed
        {
            delay_ms(50);           // debounce

            if (button() == 1)      // confirm press
            {
                led_state ^= 1;     // toggle state

                if (led_state)
                    led_on();
                else
                    led_off();

                while (button() == 1); // wait for release
            }
        }
    }
}




