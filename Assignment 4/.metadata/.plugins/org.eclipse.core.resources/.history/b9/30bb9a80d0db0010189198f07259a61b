#include "my_led.h"
#include "my_switch.h"


#if !defined(__SOFT_FP__) && defined(__ARM_FP)
  #warning "FPU is not initialized, but the project is compiling for an FPU. Please initialize the FPU before use."
#endif


void delay_ms(uint32_t delay_ms);   // make sure delay_ms is defined somewhere

int main(void)
{
    led_init();
    switch_init();

    int led_state = 0;   // 0 = OFF, 1 = ON

    while (1)
    {
        if (switch_status() == 1)     // button pressed
        {
            delay_ms(50);             // debounce delay

            if (switch_status() == 1) // confirm press
            {
                led_state = !led_state;   // toggle state

                if (led_state)
                    led_on();
                else
                    led_off();

                while (switch_status() == 1); // wait for release
            }
        }
    }
}

