#include <stdint.h>
#include <stdio.h>

#include"stm32f407xx.h"
#include"gpio.h"

void switch_init(void)
{
	//0. enable clock for GPIOD in AHB1
	RCC->AHB1ENR |= BV(0);
	//1. select mode as output
	GPIOD->MODER &= ~(BV(0) | BV(1));
	//GPIOD->MODER |= BV(24) | BV(26) | BV(28) | BV(30);
	//2. select type as push pull
	//GPIOD->OTYPER &= ~(BV(12) | BV(13) | BV(14) | BV(15));
	//3. select speed as low
	GPIOD->OSPEEDR &= ~(BV(0) | BV(1));
	//GPIOD->OSPEEDR &= ~(BV(24) | BV(26) | BV(28) | BV(30));
	//4. select pull up/down as no
	GPIOD->PUPDR &= ~(BV(0) | BV(1));
	//GPIOD->PUPDR &= ~(BV(24) | BV(26) | BV(28) | BV(30));
}
int button(void)
{
	if ((GPIOA->IDR) & BV(0) )
	{
		return 1 ; // switch is press
	}
	else
	{
		return 0 ; // switch is nor press
	}
}

void led_init(void)
{
	//0. enable clock for GPIOD in AHB1
	RCC->AHB1ENR |= BV(3);
	//1. select mode as output
	GPIOD->MODER &= ~(BV(25));
	GPIOD->MODER |= BV(24);
	//2. select type as push pull
	GPIOD->OTYPER &= ~(BV(12));
	//3. select speed as low
	GPIOD->OSPEEDR &= ~(BV(25));
	GPIOD->OSPEEDR &= ~(BV(24));
	//4. select pull up/down as no
	GPIOD->PUPDR &= ~(BV(25));
	GPIOD->PUPDR &= ~(BV(24));
}
void led_on(void)
{
	GPIOD->ODR |= BV(12);
}
void led_off(void)
{
	GPIOD->ODR &= ~(BV(12));
}

