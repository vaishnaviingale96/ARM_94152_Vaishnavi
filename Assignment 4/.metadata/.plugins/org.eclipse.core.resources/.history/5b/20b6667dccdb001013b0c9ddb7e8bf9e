#include "my_led.h"
#include "my_switch.h"


#if !defined(__SOFT_FP__) && defined(__ARM_FP)
  #warning "FPU is not initialized, but the project is compiling for an FPU. Please initialize the FPU before use."
#endif

int main(void)
{
    int count = 0;

    led_init();
    switch_init();

    while (1)
    {
        if (switch_status() == 1)   // switch pressed
        {
            count++;

            if (count == 1)
            {
                // 1st press → Green ON
                GPIOD->ODR |= BV(12);   // Green ON
                GPIOD->ODR &= BV(15);  // Blue OFF
            }
            else if (count == 2)
            {
                // 2nd press → Blue ON
                GPIOD->ODR &= ~(BV(12));  // Green OFF
                GPIOD->ODR |= (BV(15));   // Blue ON
            }
            else if (count == 3)
            {
                // 3rd press → Both OFF
                GPIOD->ODR &= ~BV(12) | BV(15);
                count = 0; // reset cycle
            }

            DelayMs(300); // simple debounce
            while (switch_status() == 1); // wait for release
        }
    }
}





