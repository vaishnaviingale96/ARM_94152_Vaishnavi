#ifndef MY_LED_H
#define MY_LED_H

#include "stm32f4xx.h"
#include <stdint.h>

/* Bit value macro */
#define BV(x) (1U << (x))

/* LED connected to GPIOD */
#define LED_PORT   GPIOD

/* LED function prototypes */
void led_init(void);
void led_on(uint8_t pin);
void led_off(uint8_t pin);
void led_toggle(uint8_t pin);

#endif /* MY_LED_H */
