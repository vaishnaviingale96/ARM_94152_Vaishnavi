#include "my_led.h"
#include "ext_intr.h"

/* âœ… Declaration only (defined in ext_intr.c) */
extern volatile int ext_flag;

int main(void)
{
    led_init();
    extint_init();

    while (1)
    {
        /* Check software flag set by ISR */
        if (ext_flag == 1)
        {
            led_on(12);
            DelayMs(200);
            led_off(12);
            DelayMs(200);

            /* Clear flag after handling */
            ext_flag = 0;
        }
    }
}








